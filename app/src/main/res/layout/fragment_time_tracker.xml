<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".TimeTracker"
    android:id="@+id/tt_container">



    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@color/colorOnSurface"
        app:cardElevation="02dp"
        app:cardCornerRadius="0dp"/>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prompter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        app:cardBackgroundColor="@color/colorPrimaryVariant"
        app:cardElevation="08dp"
        app:cardCornerRadius="0dp"/>
        <TextView android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/prompter_label"
            android:theme="@style/AppTheme"
            android:padding="20dp"
            android:textSize="25sp"
            android:textColor="@color/colorOnPrimarySoft"
            android:layout_marginTop="10dp"
            android:elevation="24dp"
            android:id="@+id/prompter_label"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/dial_view_pager"
        android:layout_below="@+id/prompter"
        android:layout_centerInParent="true"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_centerHorizontal="true"
        android:layout_width="850px"
        android:minWidth="850px"
        android:layout_height="100dp"
        android:layout_marginTop="380dp"
        app:cardBackgroundColor="@color/colorBlackGlass"
        app:cardElevation="03dp"
        app:cardCornerRadius="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:strokeColor="@color/colorBase"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
            <TableRow>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="Distance Covered:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <TextView
                    android:id="@+id/txt_distance_covered"
                    android:paddingLeft="5dp"
                    android:text="@string/numbers_distance"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/metre"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"

                    android:scaleX=".8"
                    android:scaleY=".8"
                    ></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="Distance Remaining:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <TextView
                    android:id="@+id/txt_distance_remaining"
                    android:paddingLeft="5dp"
                    android:text="@string/distance_left"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/metre"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"

                    android:scaleX=".8"
                    android:scaleY=".8"
                    ></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="Average Speed:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <TextView
                    android:id="@+id/txt_average_speed"
                    android:paddingLeft="5dp"
                    android:text="@string/numbers_average_speed"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/metre_second_squared"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"

                    android:scaleX=".8"
                    android:scaleY=".8"
                    ></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:paddingLeft="5dp"
                    android:text="Time Elapsed:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    ></TextView>
                <com.college.moderunnermvp.Chronometer
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chronometer"
                    android:textColor="@color/colorOnPrimary"
                    android:layout_marginLeft="5dp"

                    />
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="502dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="32dp"
        android:text="@string/start"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        app:rippleColor="@color/colorAccent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="502dp"
        android:layout_marginLeft="275dp"
        app:icon="@drawable/ic_baseline_reset"
        app:iconTint="@color/colorAccent"
        app:iconTintMode="multiply"
        app:iconPadding="0dp"
        app:iconSize="@android:dimen/app_icon_size"
        android:background="@android:color/transparent"

        app:rippleColor="@color/colorBlackGlass"
        />


</RelativeLayout>

</ScrollView>