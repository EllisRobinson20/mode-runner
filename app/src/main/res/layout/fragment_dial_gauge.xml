<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".TimeTracker"
    >



    <!-- TODO: Update blank fragment layout -->




    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:id="@+id/container_acceleration">

        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/accelerationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            app:sv_indicatorColor="@color/colorAccent"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acceleration"
            android:textColor="@color/colorOnPrimarySoft"
            style="@style/OverlayText"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="200dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:id="@+id/layout_2"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/top_speed"
            android:textColor="@color/colorOnPrimarySoft"
            style="@style/OverlayText"
            android:layout_alignParentBottom="true"/>
        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/topSpeedView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            app:sv_indicatorColor="@color/colorAccent"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/container_current_speed"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_below="@+id/layout_2"
        >
        <com.github.anastr.speedviewlib.SpeedView
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:id="@+id/currentSpeedView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:sv_indicatorColor="@color/colorAccent"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/label_current_speed"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/currentSpeed"
        android:textColor="@color/colorOnPrimary"
        style="@style/OverlayText"
        android:layout_below="@+id/container_current_speed"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>