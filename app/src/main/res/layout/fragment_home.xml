<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentHome">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@color/colorOnSurface"
        app:cardCornerRadius="0dp"
        app:cardElevation="02dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        app:cardBackgroundColor="@color/colorBlackGlass"
        app:cardCornerRadius="0dp"
        app:cardElevation="03dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/colorBase">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TableRow>

                <TextView
                    android:paddingLeft="5dp"
                    android:text="Distance To Run:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/target_set"
                    android:paddingLeft="5dp"
                    android:text="@string/numbers_distance"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_marginLeft="-20dp"
                    android:paddingLeft="5dp"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:text="@string/metre"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingLeft="5dp"
                    android:text="Personal Best Time:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/numbers_time"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>
            </TableRow>

            <TableRow>

                <TextView
                    android:paddingLeft="5dp"
                    android:text="Personal Best Speed:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:paddingLeft="5dp"
                    android:text="@string/numbers_average_speed"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:layout_marginLeft="-20dp"
                    android:paddingLeft="5dp"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:text="@string/metre_second"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="15sp"></TextView>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="408dp"
        android:layout_marginTop="450dp"
        android:padding="40dp"
        android:text="Start"
        android:textAlignment="center"
        android:textSize="15dp"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/materialCardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialCardView2" />


</androidx.constraintlayout.widget.ConstraintLayout>